{
  "name": "painel-agendamento-backend",
  "version": "1.0.0",
  "description": "Backend API para Sistema de Agendamento - Node.js/PostgreSQL",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:concurrency": "jest --testPathPattern=concurrency --verbose",
    "test:business": "jest --testPathPattern=business --verbose",
    "test:crud": "jest --testPathPattern=crud --verbose",
    "test:advanced": "jest --testPathPattern=advanced --verbose",
    "test:all": "jest --verbose",
    "test:load": "node tests/load/loadTest.js",
    "test:load:login": "node tests/load/loadTest.js login",
    "test:load:agendamentos": "node tests/load/loadTest.js agendamentos",
    "test:artillery": "artillery run tests/load/artillery-config.yml",
    "migrate": "npx knex migrate:latest",
    "migrate:rollback": "npx knex migrate:rollback",
    "seed": "npx knex seed:run",
    "db:maintenance": "node scripts/db-maintenance.js",
    "db:maintenance:full": "node scripts/db-maintenance.js --full",
    "db:health": "node scripts/db-health-check.js",
    "db:archive": "node -e \"require('./src/jobs/dataArchiveJob').runArchiveJob().then(() => process.exit(0))\""
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "api",
    "agendamento",
    "whatsapp",
    "evolution-api"
  ],
  "author": "Painel de Agendamento Team",
  "license": "MIT",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "busboy": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "redis": "^4.6.12",
    "sharp": "^0.34.5",
    "validator": "^13.15.15",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "artillery": "^2.0.27",
    "artillery-plugin-expect": "^2.21.0",
    "autocannon": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
