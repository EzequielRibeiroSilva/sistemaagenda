# Configurações da Aplicação
NODE_ENV=development
PORT=3000

# Configurações JWT
JWT_SECRET=sua_chave_secreta_jwt_aqui_deve_ser_muito_segura
JWT_REFRESH_SECRET=sua_chave_refresh_jwt_aqui_deve_ser_muito_segura
