# ============================================
# Variáveis de Ambiente - PRODUÇÃO (EXEMPLO)
# Painel de Agendamento Multi-Tenant
# ============================================
# IMPORTANTE: Copie este arquivo para .env.prod e preencha com valores reais
# NÃO commite o arquivo .env.prod (ele está no .gitignore)

# BANCO DE DADOS POSTGRESQL
PG_HOST=db
PG_PORT=5432
PG_DATABASE=painel_agendamento_prod
PG_USER=seu_usuario_aqui
PG_PASSWORD=sua_senha_segura_aqui
PG_POOL_MAX=25
PG_SSL_REJECT_UNAUTHORIZED=false

# REDIS
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=sua_senha_redis_aqui

# JWT - AUTENTICAÇÃO
JWT_SECRET=gere_um_secret_seguro_aqui
JWT_REFRESH_SECRET=gere_outro_secret_seguro_aqui
JWT_EXPIRES_IN=2h
JWT_REFRESH_EXPIRES_IN=7d

# WHATSAPP / EVOLUTION API
WHATSAPP_ENABLED=true
EVOLUTION_API_URL=https://sua-evolution-api.com/
EVOLUTION_API_KEY=sua_api_key_aqui
EVOLUTION_INSTANCE_NAME=sua_instancia

# EVOLUTION API - Aliases para compatibilidade
EVO_API_BASE_URL=https://sua-evolution-api.com/
EVO_API_INTERNAL_URL=http://evolution-api:8080/
EVO_API_INSTANCE_ID=sua_instancia
EVO_API_KEY=sua_api_key_aqui

# CORS - DOMÍNIOS PERMITIDOS
CORS_PRODUCTION_ORIGINS=https://app.seudominio.com,https://seudominio.com

# APLICAÇÃO
NODE_ENV=production
PORT=3001
TZ=America/Sao_Paulo
LOG_LEVEL=info
LOG_FORMAT=json

# SEEDS DE INICIALIZAÇÃO (USUÁRIOS MASTER)
ALLOW_INIT_ADMIN=true
ADMIN_INIT_EMAIL_1=admin@exemplo.com
ADMIN_INIT_PASSWORD_1=senha_segura_aqui
ADMIN_INIT_EMAIL_2=master@exemplo.com
ADMIN_INIT_PASSWORD_2=senha_segura_aqui

# URL DA API (para build do frontend)
VITE_API_BASE_URL=https://app.seudominio.com/api

# FRONTEND URL (necessária para links WhatsApp)
FRONTEND_URL=https://app.seudominio.com

# ============================================
# VARIÁVEIS OPCIONAIS RECOMENDADAS
# ============================================

# SEGURANÇA
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# LOGS
LOG_FILE=/app/logs/app.log

# NOTIFICAÇÕES WHATSAPP
ENABLE_WHATSAPP_NOTIFICATIONS=true
REMINDER_24H_ENABLED=true
REMINDER_1H_ENABLED=true
SUBSCRIPTION_REMINDER_DAYS=7

# REGRAS DE NEGÓCIO PADRÃO
DEFAULT_BOOKING_ADVANCE_HOURS=1
DEFAULT_CANCELLATION_HOURS=2
DEFAULT_FUTURE_BOOKING_DAYS=60

# CORS DESENVOLVIMENTO (apenas para referência)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
